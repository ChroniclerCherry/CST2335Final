<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#009688"
        app:title="BBC News" />

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        tools:openDrawer="start">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/NASADaily_apiLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/NasaDailyImageDataFragment"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/NASADailyImage_ApiInformation" />

                <ImageButton
                    android:id="@+id/NASADaily_ApiHelpButton"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/help"
                    android:onClick="displayApiHelp"
                    android:textSize="12sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/NASADaily_ApiEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/NASADaily_apiLayout"
                android:layout_toStartOf="@id/NasaDailyImageDataFragment"
                android:hint="@string/NASADailyImage_ApiKeyEditText" />

            <TextView
                android:id="@+id/NASADaily_favouritesTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/NASADaily_ApiEditText"
                android:layout_marginTop="10dp"
                android:text="@string/NASADaily_favouritesText"
                android:textAlignment="center"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/NASADaily_listView"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_above="@id/inputLinearLayout"
                android:layout_below="@id/NASADaily_favouritesTextView"></ListView>

            <FrameLayout
                android:id="@+id/NasaDailyImageDataFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/NASADaily_listView" />

            <LinearLayout
                android:id="@+id/inputLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@id/NasaDailyImageDataFragment">

                <Button
                    android:id="@+id/NasaDailyImageDatePickerButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="showDatePickerDialog"
                    android:text="@string/NASADailyImage_ChooseDateButton" />

                <EditText
                    android:id="@+id/NasaDailyImageDateEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="@string/NASADailyImage_DateInput"

                    android:importantForAutofill="no"
                    android:inputType="date" />

                <Button
                    android:id="@+id/NasaDailyImageSearchButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:text="@string/NASADailyImage_searchButton" />
            </LinearLayout>

        </RelativeLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/header"
            app:menu="@menu/navigation_drawer" />

    </androidx.drawerlayout.widget.DrawerLayout>
</RelativeLayout>