<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NASADailyImageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/NASADaily_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/NASADaily_title"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textAlignment="center"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/NASADaily_imageDate"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/NASADaily_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:text="Description"
            android:textAlignment="center"
            android:scrollbars = "vertical"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/NASADaily_closeImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/NASADaily_closeButton"
                />

            <Button
            android:id="@+id/NASADaily_unfavouriteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="@string/NASADailyImage_unfavouriteButton" />

        </LinearLayout>


    </LinearLayout>

</FrameLayout>